{
  "files.associations": {
    "*.neon": "yaml"
  },

  "php.suggest.basic": false,

  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer",
  },

  // PHP Intelephense
  "intelephense.environment.phpVersion": "8.4",
  "intelephense.stubs": [
    "Core",
    "date",
    "json",
    "mbstring",
    "standard",
    "pcre",
    "wordpress"
  ],

  // PHPCS
  "phpCodeSniffer.autoExecutable": true,
  "phpCodeSniffer.exec.linux": "${workspaceFolder}/wordpress/vendor/bin/phpcs",
  "phpCodeSniffer.exec.osx": "${workspaceFolder}/wordpress/vendor/bin/phpcs",
  "phpCodeSniffer.lintAction": ["Change", "Save"],
  "phpCodeSniffer.standard": "Custom",
  "phpCodeSniffer.standardCustom": "phpcs.xml",
  "phpCodeSniffer.exclude": [
    "**/wordpress/wp-admin/**",
    "**/wordpress/wp-includes/**",
    "**/wordpress/wp-content/themes/twenty*/**",
    "**/wordpress/wp-content/plugins/**",
    "**/vendor/**",
    "**/phpstan_cache/**",
    "**/phpstan-baseline.php",
  ],

  // PHPStan
  "phpstan.binPath": "${workspaceFolder}/wordpress/vendor/bin/phpstan",
  "phpstan.singleFileMode": true,
}
